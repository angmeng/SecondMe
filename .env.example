# SecondMe Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Application Environment
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# Anthropic API Configuration
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# ============================================
# AutoMem Configuration
# ============================================
# AutoMem API endpoint (use localhost:8001 for local dev, automem:8001 for Docker)
AUTOMEM_API_URL=http://localhost:8001

# AutoMem API token (generate with: openssl rand -hex 32)
AUTOMEM_API_TOKEN=your_automem_api_token_here

# AutoMem admin token (generate with: openssl rand -hex 32)
AUTOMEM_ADMIN_TOKEN=your_automem_admin_token_here

# AutoMem's internal FalkorDB password
AUTOMEM_FALKORDB_PASSWORD=automem_default_password

# OpenAI API key for AutoMem embeddings
OPENAI_API_KEY=sk-...

# ============================================
# Redis Configuration
# ============================================
# Redis connection settings (defaults work for docker-compose setup)
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# Service Ports (for local development)
# ============================================
GATEWAY_PORT=3001
ORCHESTRATOR_PORT=3002
GRAPH_WORKER_PORT=3003
FRONTEND_PORT=3000

# ============================================
# Security Configuration
# ============================================
# Session encryption key for AES-256 (generate with: openssl rand -base64 32)
SESSION_ENCRYPTION_KEY=your_encryption_key_here

# ============================================
# Telegram Configuration (Optional)
# ============================================
# Enable Telegram channel (default: false)
TELEGRAM_ENABLED=false

# Telegram bot token from @BotFather
# Get one by messaging @BotFather on Telegram: /newbot
TELEGRAM_BOT_TOKEN=

# ============================================
# WhatsApp Configuration
# ============================================
# Master kill switch: when true, bot will not respond
MASTER_KILL_SWITCH=false

# Auto-pause on user message: when true, bot pauses when you send a message
AUTO_PAUSE_ON_USER_MESSAGE=true

# Sleep hours (bot won't respond during these hours)
SLEEP_START_HOUR=23
SLEEP_END_HOUR=7

# Rate limiting (messages per minute)
RATE_LIMIT_MESSAGES=10
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# AI Behavior Configuration
# ============================================
# Default persona (casual_friend, professional_colleague, brainstorm_partner)
DEFAULT_PERSONA=casual_friend

# HTS (Human Typing Simulation) delay range in milliseconds
HTS_MIN_DELAY_MS=1000
HTS_MAX_DELAY_MS=3000

# Response creativity (temperature: 0.0-1.0)
AI_TEMPERATURE=0.7

# Maximum context retrieval depth for graph queries
GRAPH_MAX_CONTEXT_DEPTH=3
