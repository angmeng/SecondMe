# SecondMe Production Environment Configuration
# T126: Production-ready environment variables
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=production

# Service Ports
GATEWAY_PORT=3001
ORCHESTRATOR_PORT=3002
GRAPH_WORKER_PORT=3003
FRONTEND_PORT=3000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# FalkorDB Configuration
FALKORDB_HOST=falkordb
FALKORDB_PORT=6379
FALKORDB_PASSWORD=your_falkordb_password_here

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true

# Security
CORS_ALLOWED_ORIGINS=https://yourdomain.com
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Session Configuration
SESSION_EXPIRY_HOURS=24
SESSION_WARNING_MINUTES=60

# Human Typing Simulation
HTS_WPM_MIN=35
HTS_WPM_MAX=45
HTS_THINK_TIME_MIN=1000
HTS_THINK_TIME_MAX=3000
HTS_COGNITIVE_PAUSE_MIN=2000
HTS_COGNITIVE_PAUSE_MAX=5000

# Sleep Hours (default: 11 PM - 7 AM)
SLEEP_HOURS_ENABLED=true
SLEEP_START_HOUR=23
SLEEP_START_MINUTE=0
SLEEP_END_HOUR=7
SLEEP_END_MINUTE=0
SLEEP_TIMEZONE_OFFSET=0

# Metrics
METRICS_PUBLISH_INTERVAL_MS=30000
METRICS_RETENTION_DAYS=30

# WhatsApp Session (optional: for persistent sessions)
WHATSAPP_SESSION_PATH=/app/.wwebjs_auth

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
